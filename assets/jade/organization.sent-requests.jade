table.table-list(ng-if="model.users && model.users.length")
	thead
		th
		th.t-text_left Name
		th.t-text_left Role
	tbody
		tr(ng-repeat="item in model.users")
			td.t-w1p
				a.table-list__item__avatar(
					ui-sref="ws.profile.principal({userId: item.profile.id})"
					ui-sref-opts="{reload: true}"
				)
					avatar(data="item")
			td
				a.t-link(
					ui-sref="ws.profile.principal({userId: item.profile.id})"
					ui-sref-opts="{reload: true}"
					ng-bind="item.profile.full_name"
				)
			td(ng-bind="item.profile.role.label")

.p_10(ng-if="model.users && !model.users.length")
	.t-max-w600
		.notifier.info(ng-bind-html="'MY_COMPANY.SENT_REQUESTS.NO_ITEMS_DESC' | translate")
