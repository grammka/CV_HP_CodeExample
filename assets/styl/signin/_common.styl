.signin__container
	width: 400px
	box-shadow rgba(#000, 0.3) 0 2px 12px
	position: relative
	z-index: 50

.signin__logo__container
	background-color: #fff
	padding 30px
	position: relative
	text-align: center
	border-radius top 1px

.signin__back-arrow
	width: 24px
	height: 24px
	line-height: 24px
	absolute top 50% left 20px
	margin-top: -12px
	cursor: pointer
	font-size: 19px
	font-weight 600
	text-align: center

.signin__logo
	width: 80px
	display: block
	margin 0 auto
	img
		width: 100%

.signin
	background-color: $header-bg-color
	font-size: 13px
	color #fff
	border-radius 1px
	.t-link
		color #fff

.signin__field
	width: 100%
	height: 42px
	background: none
	background-color: #373F4E
	border 1px solid #181D27
	padding 8px 16px
	margin-top: 10px
	font-size: 13px
	color #fff
	box-sizing border-box
	&:first-child
		margin-top: 0
	&:focus
		border-color #000

.signin__title
	line-height: 50px
	margin: -20px -20px 0
	padding 0 20px
	border-bottom 1px solid #181D27
	font-weight 600
	font-size: 15px

.signin__text
	font-size: 13px
	color #72889a

.signin__or
	width: 100%
	height: 1px
	margin 10px 0
	background-color: #181D27
	text-align: center
	&:before
		content: 'OR'
		line-height: 20px
		background-color: $header-bg-color
		padding 0 10px
		margin-top: -10px
		display-inline-block()
