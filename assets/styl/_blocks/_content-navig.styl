.content__navig
	background-color: $header-bg-color
	font-size: 0
	no-select()

.content__navig__item
	line-height: 54px
	padding 0 14px
	position: relative
	cursor: pointer
	font-size: 14px
	font-weight: 600
	color #C7CFDE
	display-inline-block()
	&:hover
		background-color: darken($header-bg-color, 30%)
		color #fff
	&.active
		background-color: #000
		cursor: default
		color #fff
		&:after
			content ''
			display: block
			width: 100%
			height: 3px
			background-color: $color_orange
			absolute top 0 left 0
