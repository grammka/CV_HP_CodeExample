.users-table
	width: 100%
	thead
		th
			border-bottom: 1px solid $border-color
			padding 10px 5px
			font-weight: 600
	tbody
		tr
			line-height: 15px
			border-bottom: 1px solid $border-color
			position: relative
			no-select()
			&:hover
				background-color: #F7F9FA
	td
		padding 10px 5px
		vertical-align middle
		&:first-child
			padding-left: 10px

.users-table__item__avatar
	width: 30px
	height-lineheight(30px)
	display: block
	font-size: 13px

.users-table__item__name
	white-space nowrap
	font-weight: normal
	font-size: 13px

.users-table__item__role
	font-size: 12px
	color $light-text-color
