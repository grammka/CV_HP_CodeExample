.table-list
	width: 100%
	thead
		border-bottom: 1px solid $border-color
	tbody
		tr
			line-height: 15px
			border-bottom: 1px solid $border-color
			position: relative
			no-select()
			&:hover
				background-color: #F7F9FA
	th
		font-weight: 600
	td, th
		padding 10px 5px
		vertical-align middle
		&:first-child
			padding-left: 10px
		&:last-child
			padding-right: 10px

.table-list__item__approved-status
	width: 18px
	height-lineheight(18px)
	background-image: url(../img/approved-icon.png)
	background-position: 50%
	background-size 18px auto

.table-list__item__avatar
	width: 30px
	height-lineheight(30px)
	display: block
	font-size: 13px

.table-list__item__name
	font-weight: normal
	font-size: 13px

.table-list__item__role
	font-size: 12px
	color $light-text-color


.table-list_10_10
	td, th
		padding: 10px
