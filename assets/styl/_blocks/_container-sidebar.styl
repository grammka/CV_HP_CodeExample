$header-height          = $size
$members-border-color   = #c9ccd1



.container__sidebar
	width: $container-sidebar-width
	height: 100%
	absolute top 0 left 0
	overflow hidden
	&:before
		content ''
		display: block
		width: 1px
		height: 100%
		background-color: $border-color
		absolute top 0 right 0
		z-index: 30
	.header
		&:before
			content ''
			display: block
			width: 1px
			height: 100%
			background-color: #1B2029
			absolute top 0 right 0
			z-index: 30

.container__sidebar__title
	line-height: 30px
	border-bottom: 1px solid $border-color
	position: relative
	padding 0 $padding
	margin-right: 1px
	font-size: 12px
	cursor: default
	no-select()



/* Photo */

.container__sidebar__photo
	width: 100%
	height: $container-sidebar-width
	position: relative
	z-index: 40
	overflow: hidden
	no-select()
	.color-avatar
		line-height: $container-sidebar-width
		font-weight: normal
		font-size: 150px
	.avatar
		border-radius 0

.container__sidebar__photo__upload-overlay
	width: 100%
	height: 100%
	background: rgba(20,23,29, 0.5)
	absolute top 0 left 0
	z-index: 30
	opacity: 0
	cursor: pointer
	text-align: center
	color #fff
	&:before
		content ''
		absolute top 7px left 7px right 7px bottom 7px
		border 1px dashed #fff
	.center-block
		text-align: center
		font-size: 13px
	.sl-icon-id-picture-2
		padding-bottom: 20px
		font-size: 32px
	&:hover
		opacity: 1



/* Navig */

.container__sidebar__navig
	width: 100%
	background-color: #171A1F
	padding 5px
	position: relative
	z-index: 30
	box-sizing border-box
	.btn
		padding 0 !important



/* Unscrollable part */

.container__sidebar__unscrollable
	width: 100%
	height: 100%
	position: relative
	z-index: 1



/* Members */

.container__sidebar__members__title
	height-lineheight(30px)
	border-bottom: 1px solid $border-color
	position: relative
	padding 0 $padding
	margin-right: 1px
	font-size: 12px
	cursor: default
	no-select()

.container__sidebar__members__title__hint
	width: 20px
	height-lineheight(20px)
	absolute top 50% right 10px
	margin-top: -10px
	text-align: center
	font-size: 15px
	font-weight: 600
	text-decoration none
	color #FD9C00

.container__sidebar__members__container
	absolute top 31px right 1px bottom 0 left 0

.container__sidebar__members-navig__container
	display: none
	width: 100%
	height: 86px
	background-color: rgba(#D8DCDF, 0.9)
	absolute top 0 left 0
	z-index: 80

.container__sidebar__members-navig
	padding $padding

.container__sidebar__members-navig__droplist
	display: block

.container__sidebar__members-navig__search-field
	position: relative
	//corner-left-bottom-bottom(#fff, 6px)

.container__sidebar__members__scroll
	width: 100%
	absolute top 0 bottom 0
