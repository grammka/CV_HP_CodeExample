.required-field
	position: relative
	padding-left: 19px
	&:before
		content ''
		display: block
		width: 20px
		background-color: $color_red
		absolute top 0 left 0 bottom 0
	&:after
		content '!'
		display: block
		width: 20px
		height: 20px
		line-height: 19px
		absolute top 50% left 0
		margin-top: -10px
		z-index: 10
		font-family: 'streamline'
		text-align: center
		font-size: 18px
		color #fff

.required-field__hint
	width: 20px
	absolute top 0 left 0 bottom 0
	z-index: 20
