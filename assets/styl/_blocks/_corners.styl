corner($size=4px)
	&:before
		content ''
		display: block
		width: 0
		height: 0
		border ($size / 2) solid transparent
		z-index: 5

corner-top-left($color, $size=4px)
	corner($size)
	&:before
		border-top-color $color
		border-left-color $color

corner-top-right($color, $size=4px)
	corner($size)
	&:before
		border-top-color $color
		border-right-color $color

corner-bottom-left($color, $size=4px)
	corner($size)
	&:before
		border-bottom-color $color
		border-left-color $color

corner-bottom-right($color, $size=4px)
	corner($size)
	&:before
		border-bottom-color $color
		border-right-color $color


corner-left-top-top($color, $size=4px)
	corner-bottom-left($color, $size)
	&:before
		absolute left 0 top (-1 * $size)

corner-right-top-top($color, $size=4px)
	corner-bottom-right($color, $size)
	&:before
		absolute right 0 top (-1 * $size)

corner-right-top-right($color, $size=4px)
	corner-top-left($color, $size)
	&:before
		absolute right (-1 * $size) top 0

corner-right-bottom-right($color, $size=4px)
