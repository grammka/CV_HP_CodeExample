ov-corner($size=4px)
	&:before
		content ''
		display: block
		width: 0
		height: 0
		border $size solid transparent
		z-index: 30

ov-corner-left-top($arr-color=#000, $overflow-color=$content-bg-color, $size=4px)
	ov-corner($size)
	&:before
		border-right-color $arr-color
		border-top-color $overflow-color
		border-left-color $overflow-color
		border-bottom-color $arr-color
		absolute left 0 top 0

ov-corner-right-top($arr-color=#000, $overflow-color=$content-bg-color, $size=4px)
	ov-corner($size)
	&:before
		border-right-color $overflow-color
		border-top-color $overflow-color
		border-left-color $arr-color
		border-bottom-color $arr-color
		absolute right 0 top 0

ov-corner-right-bottom($arr-color=#000, $overflow-color=$content-bg-color, $size=4px)
