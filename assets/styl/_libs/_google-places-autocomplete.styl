.pac-container
	background-color: #fff
	overflow: hidden
	position: absolute !important
	z-index: 1000
	box-sizing(border-box)
	border-bottom-radius(1px)
	box-shadow(rgba(0, 0, 0, 0.3) 0 2px 6px)
	&:after
		height: 0
		display: none
		font-size: 0

