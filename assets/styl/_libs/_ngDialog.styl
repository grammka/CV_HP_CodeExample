.ngdialog-overlay
	background-color rgba(0,0,0, 0.6)

.ngdialog.ngdialog-theme-default_OLD
	padding 100px 0
	z-index: 2000
	.ngdialog-close
		display: none
		&:before
			top -24px
			right -24px
			color #ddd
		&:hover
			&:before
				color #fff
	.ngdialog-content
		min-width 500px
		background-color: #fff
		padding 20px
		border-radius 2px
		display-inline-block()


.ngdialog.ngdialog-theme-default
	width: 100%
	height: 100%
	absolute top 0 left 0
	overflow: auto
	white-space: nowrap
	text-align: center
	font-size: 0
	&:before
		height: 100%
		display: inline-block
		vertical-align: middle
		content: ''
	.ngdialog-content
		width auto
		position: relative
		background-color: #fff
		padding: 20px
		display: inline-block
		white-space: normal
		vertical-align: middle
		text-align: left
		border-radius 0
		font-size: 14px
		img
			display: block
			border: none
	.ngdialog-close
		display: none


