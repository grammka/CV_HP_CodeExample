.intro__select-role
	fixed top 10px left 10px
	z-index: 10000000



.intro__header
	width: 100%
	height: 30%
	absolute top 0 left 0

.intro__content
	width: 100%
	height: 40%
	absolute top 30% left 0

.intro__footer
	width: 100%
	height: 30%
	absolute bottom 0 left 0



.intro
	width: 1000px
	padding 50px 0
	margin 0 auto
	text-align: center

.intro__title
	line-height: 50px
	margin-bottom: 30px
	font-size: 50px
	font-weight: 300

.intro__desc
	padding 0 150px
	line-height: 32px
	font-size: 20px
	color $light-text-color



.intro__steps
	max-width: 1000px
	font-size: 0

.intro__step
	width: 33%
	position: relative
	z-index: 10
	display-inline-block()
	text-align: center
	&:before
		content: ''
		display: block
		width: 60%
		height: 20px
		background radial-gradient(circle, #E2E4E6 10%, white 10%) 50px 50px
		background-size 30px 100px
		background-position: center
		absolute top 40px left -30%
		z-index: -1
	&:first-child
		&:before
			display: none

.intro__step__img
	width: 100px
	margin 0 auto

.intro__step__title
	margin 20px 0 15px
	font-size: 24px

.intro__step__desc
	padding 0 15px
	font-size: 14px
	color $light-text-color



.intro__video-popup__container
	background-color: rgba(#000, 0.8)
	fixed top 0 left 0 right 0 bottom 0
	z-index: 100

.intro__video-popup
	background-color: #fff
	absolute top 80px left 80px right 80px bottom 80px

.intro__video-popup__close-btn
	width: 30px
	height-lineheight(30px)
	background-color: $color_dark-blue
	absolute top -15px right -15px
	z-index: 100
	cursor: pointer
	text-align: center
	font-weight: 600
	font-size: 30px
	color #fff
	border-radius 50%



@media (max-height: 550px)
	.intro__header
		height: 160px

	.intro__content
		height: auto
		bottom 120px
		top 140px

	.intro__footer
		height: 120px

