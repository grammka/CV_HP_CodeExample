body
	background-color: $content-bg-color
	//font: 12px/20px "Droid Sans Mono", Tahoma, sans-serif
	//font: 13px/20px helvetica, arial, sans-serif
	font: 13px/20px "Open Sans", arial, sans-serif
	color: $text-color
	&.s-with-sidebar
	&.pre-loading
		overflow: hidden
	&.s-signin
	&.s-about
	&.s-prices
	&.s-payment
		background-image: url(/data/img/bg9.jpg)
		background-repeat: no-repeat
		background-size: cover
		background-position: center
		background-attachment: fixed
		&:before
			content ''
			display: block
			width: 100%
			height: 100%
			background-color: rgba(72, 52, 40, 0.6)
			fixed top 0 left 0
			z-index: -1

a
	color $text-color

b
	font-weight: 600 !important

.padding
	padding $padding

.right-bottom-navig
	absolute right 0 bottom 0

.t-black-link
	cursor: pointer !important
	color $text-color
	&:hover
		color $color_orange

.t-white-link
	cursor: pointer !important
	color #fff
	&:hover
		color $color_orange

.t-blue-link
	cursor: pointer !important
	color: $color_clear-blue !important
	&:hover
		color: $color_light-blue !important

.logo50x50
	width: 50px
	display-inline-block()
	img
		width: 100%

.sl-icon[disabled]
	color #666 !important
	cursor: default !important



/* Content */

.wrapper
	.s-404 &
	.s-with-sidebar &
		height: 100%

.container
	absolute top 0 left $sidebar-width right 0 bottom 0
	.sidebar_locked &
		left $sidebar-locked-width

.header
	height: $size
	background-color: $header-bg-color
	cursor: default
	position: relative
	z-index: 100
	white-space nowrap
	color #fff
	no-select()
	.btn
		border-color #000 !important

.header__right-navig
	absolute right 0 bottom 0

.header__content
	height 24px
	line-height: 24px
	padding 15px 0 15px $padding

.header__title
	padding-right: $padding
	overflow: hidden
	text-transform: uppercase
	text-overflow ellipsis
	font-size: 17px
	font-weight 600

.header__info-icon
	line-height: inherit
	margin-left 10px
	font-size: 15px
	font-weight: 600
	text-decoration: none
	color $color_orange
	display-inline-block()

.content
	background-color: $content-bg-color
	padding: $padding

.content__with-sidebar
	absolute top 0 left $container-sidebar-width right 0 bottom 0

.content__with-header
	absolute top $header-height left 0 right 0 bottom 0

.content__title
	margin-bottom: 10px
	text-transform: uppercase
	font-size: 13px



/* Titles */

.title__container
	//min-height: 44px
	background-color: $title-container-bg
	padding 5px $padding
	position: relative

.title
	line-height: 24px
	cursor: default
	text-transform: uppercase
	font-weight: 600
	font-size: 16px
	color #000
	span
		color #8A8C98

.sub-title
	line-height: 20px
	cursor: default
	font-size: 11px
	text-transform: uppercase
	color #8A8C98

.fix-header
	&.fixed-top
	&.fixed-hidden
		width: 100%
		position: absolute
		z-index: 50
