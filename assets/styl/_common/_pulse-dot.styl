.dot
	width 16px
	height 16px
	background-color #fdb700
	border 1px solid #C77700
	position absolute
	z-index 10
	border-radius 50%

.pulse-dot
	width 20px
	height 20px
	position absolute
	z-index 10
	&:before,
	&:after
		content ''
		display: block
		background-color #FD8D00
		border 2px solid #FDB700
		absolute top 0 left 0 right 0 bottom 0
		border-radius 50%
		animation: pulse-dot 1.6s infinite ease-in-out
		transform scale(0)
	&:after
		animation-delay 0.8s

@keyframes pulse-dot
	0%
		transform scale(0)
		opacity: 1
	80%
		transform scale(1)
		opacity: 0.2
	100%
		transform scale(1)
		opacity: 0
