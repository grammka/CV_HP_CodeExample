.ngdialog_first-time-tour
	.ngdialog-content
		width: 684px !important

.ngdialog_first-time-tour__puls-tour-desc
	height: 50px
	line-height: 50px
	margin: 0 -20px
	background-color: #e7e7e7
	font-weight 600
	text-align: center
	.puls-tour__point
		width: 36px
		height: 36px
		position: relative
		background-color: #fff
		display-inline-block()
		vertical-align middle
		margin 0 7px 0 5px
		border-radius 50%
		&:before
			background-color: #FF6100



.ngdialog__title
	height: 50px
	line-height: 50px
	margin: -20px -20px 20px
	padding: 0 20px
	border-bottom: 1px solid #ddd
	font-weight 600
	font-size: 16px
