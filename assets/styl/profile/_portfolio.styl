.profile__portfolio__articles
	display: block

.profile__portfolio__article
	display: block
	line-height: 16px
	background-color: $text-bg-color
	padding 12px $padding 12px ($padding + 34px + $padding)
	position: relative
	box-sizing border-box
	transition background-color 0.23s
	no-select()
	&:hover
		background-color: $text-bg-color
		.profile__portfolio__article__type-icon
			font-size: 20px
			&:after
				background-color: transparent

.profile__portfolio__article__type-icon
	rotated-sq(28px, #F2F4F9)
	absolute top 0 left $padding bottom 0
	margin auto 0
	text-align: center
	font-size: 15px
	transition font-size 0.23s
	&:after
		transition background-color 0.23s
	.sl-icon
		position: relative
		z-index: 10
		color #54575E

.profile__portfolio__article__title
	text-transform: uppercase

.profile__portfolio__article__navig
	text-align: right
