.feedback__post
	margin-top: 20px
	&:first-child
		margin-top: 0

.feedback__post__header
	margin-bottom: 6px
	font-size: 0

.feedback__post__category
	font-weight: bold
	font-size: 13px

.feedback__post__rating
	height-lineheight(22px)
	padding 0 5px
	margin-left: 8px
	background-color: #000
	font-size: 12px
	color #fff
	border-radius 2px
	display-inline-block()

.feedback__post__text
	background-color: $text-bg-color
	padding 12px
	font-size: 14px
	border-radius 2px



.feedback__categories
	margin: -6px 0 0 -6px
	font-size: 0

.feedback__categories__item
	height-lineheight(18px)
	padding 6px 6px 6px 10px
	margin 6px 0 0 6px
	border 1px solid #D2D7DC
	cursor: pointer
	display-inline-block()
	border-radius 2px
	&:hover
		background-color: #D2D7DC
	&.active
		background-color: $color_green
		border-color: $color_green
		cursor: default
		color #fff
		.feedback__categories__item__counter
			background-color: #6A9E3A

.feedback__categories__item__title
	font-size: 14px
	display-inline-block()

.feedback__categories__item__counter
	height-lineheight(18px)
	background-color: #D2D7DC
	padding 0 6px
	margin-left: 12px
	font-size: 12px
	font-weight: 600
	display-inline-block()
	border-radius 2px




.feedback-form__item
	td
		padding-top: 15px
	&:first-child
		td
			padding-top: 0

.feedback-form__item__title
	width: 1%
	font-size: 14px
	text-align: right
	white-space nowrap

.feedback-form__item__rating
	padding-left: 20px
