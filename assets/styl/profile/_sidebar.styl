.profile__sidebar__header__user-name__container
	line-height: 15px
	padding: 12px 50px 0 24px

.profile__sidebar__header__online-status
	width: 8px
	height: 8px
	absolute top 15px left 9px
	border-radius 50%
	&.online
		background-color: $color_green
	&.offline
		background-color: $color_red

.profile__sidebar__header__user-name
	max-width: 100%
	line-height: 15px
	overflow: hidden
	text-transform: uppercase
	text-overflow ellipsis
	font-size: 16px
	font-weight 600
	color #dde0e7
	display-inline-block()

.profile__sidebar__header__user-info
	line-height: 20px
	padding-left: 24px
	font-size: 12px
	color #848C9B

.profile__sidebar__user-info__link
	display-inline-block()

.profile__sidebar__header__approved-status
	width: 22px
	height-lineheight(22px)
	background-image: url(../img/approved-icon.png)
	background-position: 50%
	background-size 22px auto
	margin-top: -11px
	absolute top 50% right 12px

.profile__sidebar__controlled-by
	background-color: $color_red
	padding 9px $padding
	font-size: 12px
	color #fff

.profile__sidebar__shared-profile
	background-color: $color_gray-blue
	padding 9px $padding
	font-size: 12px
	color #fff


/* Info */

.profile__sidebar__user-info
	background-color: $dark-bg-color
	padding 10px $padding $padding
	position: relative
	z-index: 30

.profile__sidebar__user-info__title
	color #848C9B

.profile__sidebar__user-info__desc
	padding-top: 5px
	font-size: 12px
	color #DFE3EA
	.t-text_light
		color #848C9B


/* Navig */

.profile__sidebar__open-to-gigs-btn
	&.active
		background-color: $color_green
		color #000

.profile__sidebar__booked-btn
	&.active
		background-color: $color_red



/* Members */

.profile__sidebar__members__container
	width: 100%
	height: 100%
	position: relative
